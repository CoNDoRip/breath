# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the API v1
GET     /                           controllers.Application.index()

# API v1
# Authorization
POST    /api/v1/login               controllers.Authorization.login()
GET     /api/v1/logout              controllers.Authorization.logout()

# ProfilePage
GET     /api/v1/profile/id:id       controllers.ProfilePage.getProfile(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
